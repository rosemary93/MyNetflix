<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8F4A9"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ShowUserInfoFragment">

    <TextView
        android:id="@+id/textView_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="User Info"
        android:textColor="#163313"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_shape"
        android:padding="10dp"
        android:textColor="#257C0C"
        android:textSize="20sp"
        tools:text="Name" />

    <TextView
        android:id="@+id/textView_familyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_shape"
        android:padding="10dp"
        android:textColor="#257C0C"
        android:textSize="20sp"
        tools:text="Family Name" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_shape"
        android:padding="10dp"
        android:textColor="#257C0C"
        android:textSize="20sp"
        tools:text="Email" />

    <TextView
        android:id="@+id/textView_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_shape"
        android:padding="10dp"
        android:textColor="#257C0C"
        android:textSize="20sp"
        tools:text="Phone number" />

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_shape"
        android:padding="10dp"
        android:textColor="#257C0C"
        android:textSize="20sp"
        tools:text="Username" />
</LinearLayout>